<%- include('partials/header') %>

    <div id="submit-secret" class="vh-100 ">
        <div class="jumbotron centered">
            <div class="card" style="border-radius: 15px;">
                <div class="card-body p-5">
                    <i class="fas fa-key fa-6x"></i>
                    <h1 class="display-3">Secrets</h1>
                    <p class="secret-text">Share you secrets anonymously!</p>
                    <form action="/submit" method="POST">
                        <div class="form-group secret-form">
                            <input type="text" name="secretTitle" class="form-control text-center"
                                placeholder="Secret Title" required>
                            <input type="text" class="form-control text-center" name="secretBody"
                                placeholder="What's your secret?" required>
                        </div>

                        <button type="submit" class="btn btn-submit">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <%- include('partials/footer') %>